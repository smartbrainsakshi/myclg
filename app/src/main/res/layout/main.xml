                android:text="45 contacts"
                android:id="@+id/person_age1"
                android:layout_toRightOf="@+id/person_photo1"
                android:layout_below="@+id/person_name1"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
