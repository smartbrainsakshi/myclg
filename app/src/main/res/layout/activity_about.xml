<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/tools"
            android:padding="16dp"
            android:id="@+id/cards"
            android:layout_below="@+id/textView"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"

                card_view:cardCornerRadius="6dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#2D566B">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/computer"
                        android:layout_marginRight="16dp"
                        android:layout_alignBottom="@+id/person_age" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        android:text="Prince Sharzeel"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_age"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_below="@+id/person_name"
                        android:textColor="#ffffff"
                        android:text="3rd Year, CSE " />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv1"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"

                card_view:cardCornerRadius="6dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#861E6A">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_photo1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/computer"
                        android:layout_marginRight="16dp"
                        android:layout_alignBottom="@+id/person_name1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name1"
                        android:layout_toRightOf="@+id/person_photo1"
                        android:layout_alignParentTop="true"
                        android:text="Sakshi Mishra"
                        android:textSize="20dp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_age1"
                        android:layout_toRightOf="@+id/person_photo1"
                        android:layout_below="@+id/person_name1"
                        android:textColor="#ffffff"
                        android:text="3rd Year, CSE" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv2"

                card_view:cardCornerRadius="6dp"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                >

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="#227585">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:id="@+id/person_name2"
                    android:layout_toRightOf="@+id/person_photo2"
                    android:layout_alignParentTop="true"
                    android:textSize="20sp"
                    android:textColor="#b99c9c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_age2"
                    android:layout_toRightOf="@+id/person_photo2"
                    android:layout_below="@+id/person_name2"
                    android:textColor="#ffffff"
                    android:text="myCLG is an app developed for MMMUT students to bridge their gap to academics&apos; provisions.Easier access to schedules,question papers or contacts of faculties. The app is under development so it may not perform well at moments.We are working on further features like branchwise newsfeed and class reminder." />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv3"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"

                card_view:cardCornerRadius="6dp"
                >

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv4"

                card_view:cardCornerRadius="6dp"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                >

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv5"
                app:cardPreventCornerOverlap="false"

                card_view:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                >

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
